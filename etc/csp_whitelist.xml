<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="trustcaptcha-cdn" type="host">https://cdn.trustcomponent.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="trustcaptcha-api" type="host">https://api.trustcomponent.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="trustcaptcha-img" type="host">https://cdn.trustcomponent.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="trustcaptcha-fonts" type="host">https://cdn.trustcomponent.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
